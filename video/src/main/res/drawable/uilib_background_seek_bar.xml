<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background" android:height="3dp" android:gravity="center_vertical">
        <shape>
            <corners android:radius="2dp"/>
            <solid android:color="#77f0f0f0"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress" android:height="3dp" android:gravity="center_vertical">
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <solid android:color="#aaffffff"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress" android:height="3dp" android:gravity="center_vertical">
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <solid android:color="#fe6528" />
            </shape>
        </clip>
    </item>
</layer-list>
